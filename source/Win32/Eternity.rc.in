#include <winuser.h>

#define VFT_APP     0x00000001L
#define VOS_NT      0x00040000L
#define VS_FF_DEBUG 0x00000001L

LANGUAGE LANG_ENGLISH, SUBLANG_ENGLISH_US
#pragma code_page(1252)

1 ICON "@CMAKE_SOURCE_DIR@/source/Win32/ee.ico"


1 VERSIONINFO
 FILEVERSION @PROJECT_VERSION_MAJOR@,@PROJECT_VERSION_MINOR@,@PROJECT_VERSION_PATCH@,0
 PRODUCTVERSION @PROJECT_VERSION_MAJOR@,@PROJECT_VERSION_MINOR@,@PROJECT_VERSION_PATCH@,0
 FILEFLAGSMASK 0x17L
#ifdef _DEBUG
 FILEFLAGS VS_FF_DEBUG
#else
 FILEFLAGS 0x0L
#endif
 FILEOS VOS_NT
 FILETYPE VFT_APP
 FILESUBTYPE 0
BEGIN
    BLOCK "StringFileInfo"
    BEGIN
        BLOCK "040904b0"
        BEGIN
            VALUE "CompanyName", "Team Eternity"
            VALUE "FileDescription", "The Eternity Engine"
            VALUE "FileVersion", "@PROJECT_VERSION@"
            VALUE "InternalName", "Eternity"
            VALUE "LegalCopyright", "Copyright ï¿½ 2020 Team Eternity"
            VALUE "OriginalFilename", "Eternity.exe"
            VALUE "ProductName", "The Eternity Engine"
            VALUE "ProductVersion", "@PROJECT_VERSION@"
        END
    END
    BLOCK "VarFileInfo"
    BEGIN
        VALUE "Translation", 0x409, 1200
    END
END

